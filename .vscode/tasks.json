{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Blackjack",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "/EHsc",
        "/std:c++17",
        "/I", "C:\\SFML\\SFML-2.6.1\\include",
        "/I", "${workspaceFolder}\\Consale",
        "/I", "${workspaceFolder}\\Graphics",
        "/I", "${workspaceFolder}\\Graphics\\Utils",
        "${workspaceFolder}\\Consale\\GameManager.cpp",
        "${workspaceFolder}\\Consale\\main.cpp",
        "${workspaceFolder}\\Graphics\\StarterScreen.cpp",
        "${workspaceFolder}\\Graphics\\Gameplay.cpp",
        "${workspaceFolder}\\Graphics\\ResultsScreen.cpp",
        "${workspaceFolder}\\Graphics\\Utils\\Utils.cpp",
        "/link",
        "/LIBPATH:C:\\SFML\\SFML-2.6.1\\lib",
        "sfml-graphics.lib",
        "sfml-window.lib",
        "sfml-system.lib",
        "sfml-audio.lib",
        "/OUT:${workspaceFolder}\\Consale\\main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    }
  ]
